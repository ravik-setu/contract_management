<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <data>
        <record id="project_edit_project_form" model="ir.ui.view">
            <field name="name">project_edit_project_form</field>
            <field name="model">project.project</field>
            <field name="inherit_id" ref="project.edit_project"/>
            <field name="arch" type="xml">
                <xpath expr="//page[@name='settings']" position="after">
                    <page name="Contracts" string="Contracts">
                        <field name="contract_ids" readonly="1">
                            <tree>
                                <field name="name"/>
                                <field name="partner_id"/>
                                <field name="project_id" optional="hide"/>
                                <field name="from_date"/>
                                <field name="to_date"/>
                                <field name="contract_uom"/>
                                <field name="hours_per_day"/>
                                <field name="total_contract_service_hours"/>
                                <field name="contract_quantity"/>
                                <field name="remaining_quantity"/>
                                <field name="hr_responsible_id" optional="hide"/>
                                <field name="company_id" optional="hide"/>
                            </tree>
                        </field>
                    </page>
                </xpath>
            </field>
        </record>
    </data>
</odoo>